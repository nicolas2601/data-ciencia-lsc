# Variables de entorno para producci√≥n en Coolify
# Copia este archivo y configura las variables en Coolify

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# TensorFlow Configuration
TF_USE_LEGACY_KERAS=1
TF_CPP_MIN_LOG_LEVEL=2
CUDA_VISIBLE_DEVICES=""

# Model Paths (relativas al directorio /app en el contenedor)
SIGN_MODEL_PATH=models/sign_recognition_model.h5
LABELS_PATH=models/labels.pkl
SENTENCE_MODEL_PATH=models/sentence_model

# CORS Configuration
CORS_ORIGINS=*
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# Logging
LOG_LEVEL=info
PYTHONUNBUFFERED=1

# Health Check
HEALTH_CHECK_TIMEOUT=30

# Memory Management
PYTHONDONTWRITEBYTECODE=1
PIP_NO_CACHE_DIR=1
